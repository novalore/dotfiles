set charset=utf-8
set send_charset=utf-8
#
set mbox_type   = Maildir
set sendmail    = /usr/bin/msmtp
#
set folder      = ~/Mail/Gmail
set spoolfile   = "+INBOX"
set mbox        = "+[Gmail]/Tutti i messaggi"
set postponed   = "+[Gmail]/Bozze"
unset record
#
mailboxes +INBOX
#
macro index D \
    "<save-message>+[Gmail]/Cestino<enter>" \
    "move to trash"
#
macro index S \
    "<save-message>+[Gmail]/Spam<enter>" \
    "mark as SPAM"
#
# main options
 set realname   = "Lorenzo Novaro"
 set from       = "novalore@gmail.com"
 set mail_check = 0
 set envelope_from
#
 unset move           # gmail does that
 set delete           # don't ask, just do
 unset confirmappend  # don't ask, just do!
 set quit             # don't ask, just do!!
 unset mark_old       # read/new is good enough for me
#
# sort/threading
 set sort     = threads
 set sort_aux = reverse-last-date-received
 set sort_re
#
# look and feel
 set pager_index_lines = 8
 set pager_context     = 5
 set pager_stop
 set menu_scroll
 set smart_wrap
 set tilde
 unset markers
#
# composing 
 set fcc_attach
 unset mime_forward
 set forward_format = "Fwd: %s"
 set include
 set forward_quote
#
 ignore *                               # first, ignore all headers
 unignore from: to: cc: bcc: date: subject:  # then, show only these
 hdr_order from: to: cc: bcc: date: subject: # and in this order
#
# Vim
 set edit_headers
 set editor="vim +/^$ ++1 -c 'set spell spelllang=it,en,sv|startinsert'"
#
# Colorscheme
 source ~/.mutt/mutt-colors-solarized-dark-256.muttrc
