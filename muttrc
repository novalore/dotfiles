set charset=utf-8
set send_charset=utf-8
#
set mbox_type   = Maildir
set sendmail    = /usr/bin/msmtp
# Multiple accounts in use
set spoolfile = "+19/INBOX"

source ~/.mutt/accounts/19

folder-hook 19/*        source ~/.mutt/accounts/19
folder-hook Gmail/*     source ~/.mutt/accounts/Gmail

# Main options
 set mail_check = 0
 set envelope_from
#
 unset move           # gmail does that
 set delete           # don't ask, just do
 unset confirmappend  # don't ask, just do!
 set quit             # don't ask, just do!!
 unset mark_old       # read/new is good enough for me
#
# sort/threading
 set sort     = threads
 set sort_aux = reverse-last-date-received
 set sort_re
#
# look and feel
 set pager_index_lines = 8
 set pager_context     = 5
 set pager_stop
 set menu_scroll
 set smart_wrap
 set tilde
 unset markers
# tolerate html use
 auto_view text/html
 alternative_order text/plain text/enriched text/html
#
# composing 
 set fcc_attach
 unset mime_forward
 set forward_format = "Fwd: %s"
 set include
 set forward_quote
#
 ignore *                               # first, ignore all headers
 unignore from: to: cc: bcc: date: subject:  # then, show only these
 hdr_order from: to: cc: bcc: date: subject: # and in this order
#
# Vim
 set edit_headers
 set editor="vim +/^$ ++1 -c 'set spell spelllang=it,en,sv|startinsert'"
#
# Colorscheme
 source ~/.mutt/mutt-colors-solarized-dark-256.muttrc
#
#Key bindings
bind index,pager <F2>   sidebar-next
bind index,pager <F3>     sidebar-prev
bind index,pager <space>    sidebar-open
macro index B '<enter-command>toggle sidebar_visible<enter><refresh>'
macro pager B '<enter-command>toggle sidebar_visible<enter><redraw-screen>'
